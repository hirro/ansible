<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config
    http://www.hazelcast.com/schema/config/hazelcast-config-3.6.xsd"
    xmlns="http://www.hazelcast.com/schema/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <properties>
        <property name="hazelcast.logging.type">jdk</property>
        <property name="hazelcast.version.check.enabled">false</property>
    </properties>
    <group>
        <name>dev</name>
        <password>dev-pass</password>
    </group>
<!--     <group>
        <name>pilot</name>
        <password>pilot-pass</password>
    </group>
    <group>
        <name>prod</name>
        <password>prod-pass</password>
    </group>
 -->    <network>
        <public-address>{{ host_ip }}:5701</public-address>
        <join>
            <multicast enabled="false" />
            <tcp-ip enabled="true">
                {% for item in hazelcast_hosts %}
                <member>{{ item }}</member>
                {% endfor %}
            </tcp-ip>
        </join>
    </network>
    <management-center enabled="true">http://192.168.1.21:8080/mancenter</management-center>
</hazelcast>
